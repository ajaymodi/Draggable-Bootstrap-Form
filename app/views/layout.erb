<html lang="en">
  <head>
    <title>Demo App</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="/demo_app/css/bootstrap.min.css" rel="stylesheet" media="screen" >
    <link rel="stylesheet" href="/demo_app/css/jquery-ui.min.css" media="screen">
    <link href="/demo_app/css/signin.css" rel="stylesheet" media="screen">
    <link href="/demo_app/css/main.css" rel="stylesheet" media="screen">
    <link rel="stylesheet" media="screen" href="/demo_app/css/screen.css">
    <script type="text/javascript" src="/demo_app/js/jquery-2.1.1.min.js"></script>
    <script type="text/javascript" src="/demo_app/js/jquery.validate.min.js"></script>
    <script type="text/javascript" src="/demo_app/js/main.js"></script>
    <script type="text/javascript" src="/demo_app/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="/demo_app/js/jquery-ui.min.js"></script>
    <script type="text/javascript" src="/demo_app/js/handlebars.js"></script>
    <script type="text/javascript" src="/demo_app/js/jquery.form.js"></script>
  </head>
  <body>
     <!-- show logout tab -->
    <% if login? %>
      <div class="container col-sm-12 col-md-12">
        <div class="navbar navbar-fixed-top navbar-default">
          <div class="container">
            <div class="container">
                <ul class="nav navbar-nav">
                  <li> <a id="logout" href="/logout">Logout</a> </li>
                </ul>
            </div>
          </div>
        </div>
      </div>
    <br/><br/><br/><br/>
  <% end %>
    <!-- handling flash messages -->
    <% if flash[:error] %>
      <p class= "field_with_errors">
        <%= flash[:error] %>
      </p>
    <% elsif flash[:success] %>
      <p class= "field_with_success">
        <%= flash[:success] %>
      </p>  
    <% end %>
    <%= yield %>
  </body>
</html>
