 <legend>Simple form builder demo</legend>

  <div class="container-fluid">
    <div class="span10">
      <div class="span12" id="selected-content">
        <div class="form-group" id="form-title-div">
          <input type="text" class="form-control" placeholder="Type form title here" id="form-title" />
        </div>

        <table class="fields">
          <colgroup>
            <col span="1"/>
            <col span="1"/>
          </colgroup>
          <tbody>
            <tr>
              <td class="well droppedFields" ></td>
              <td class="well droppedFields" ></td>
            </tr>
          </tbody>
        </table>
        <br/>

        <!-- Action bar - Suited for buttons on form -->
         <table class="fields" >
          <tbody>
            <tr>
              <td class="span5 well action-bar droppedFields">
              </td>
            </tr>
          </tbody>
        </table>
        <br/>
      </div>
   </div>       
  
    <div class="row">
      <div class="span2" style="margin-left:10px;">
        <b>Input Fields</b><br>        
        <div class="selectorField draggableField">
          <div class="textbox well well-mini"><b></b> Text Input</div>
          <div class="model">
            <label class="control-label">Text Input</label>
            <input type="text" placeholder="Your Text Here..." class="ctrl-textbox form-control" required="">
          </div>
        </div>

        <div class="selectorField draggableField">
          <div class="password well well-mini"><b></b> Password</div>
          <div class="model">
            <label class="control-label">Password</label>
            <input type="password" placeholder="Password ..." class="ctrl-passwordbox form-control" required="">
          </div>
        </div>

        <div class="selectorField draggableField">
          <div class="phone well well-mini"><b></b> Phone</div>
          <div class="model">
            <label class="control-label">Phone</label>
            <input type='tel' pattern='\d{3}[\-]\d{3}[\-]\d{4}' placeholder='Format: 999-999-9999' class="ctrl-phonebox form-control" required=""> 
          </div>
        </div>

        <div class="selectorField draggableField">
          <div class="email well well-mini"><b></b> Email</div>
          <div class="model">
            <label class="control-label">Email</label>
            <input placeholder="Email address"  type="email" name="email" class="ctrl-emailbox form-control" required="">
          </div>
        </div>

        <div class="selectorField draggableField">
          <div class="combobox well well-mini"><b></b>Combobox</div>
          <div class="model">
            <label class="control-label">Combobox</label>
            <select class="ctrl-combobox form-control">
              <option value="option1">Option 1</option>
              <option value="option2">Option 2</option>
              <option value="option3">Option 3</option>
            </select>
          </div>
        </div>

        <div class="selectorField draggableField">
          <div class="radiogroup well well-mini"><b></b> Radio button</div>
          <div class="model">
            <label class="control-label" style="text-align:left">Radio button</label>
            <div  class="ctrl-radiogroup radio">
              <span style="display:block;"><input type="radio" name="radioField" value="option1">Option 1</span>
              <span style="display:block;"><input type="radio" name="radioField" value="option2">Option 2</span>
              <span style="display:block;"><input type="radio" name="radioField" value="option3">Option 3</span>
            </div>
          </div>
        </div>

        <div class="selectorField draggableField">
          <div class="checkboxgroup well well-mini"><b></b> Checkbox</div>
          <div class="model">
            <label class="control-label" >Checkbox</label>
            <div class="ctrl-checkboxgroup checkbox">
              <span style="display:block;"><input type="checkbox" name="checkboxField" value="option1">Option 1</span>
              <span style="display:block;"><input type="checkbox" name="checkboxField" value="option2">Option 2</span>
              <span style="display:block;"><input type="checkbox" name="checkboxField" value="option3">Option 3</span>
            </div>
          </div>
        </div>

        <div class="selectorField draggableField">
          <div class="selectmultiple well well-mini"><b></b>Multiselect</div>
          <div class="model">
            <label class="control-label">Multiselect</label>
            <div >
              <select multiple="multiple" style="width:150px" class="ctrl-selectmultiplelist form-control">
                <option value="option1">Option 1</option>
                <option value="option2">Option 2</option>
                <option value="option3">Option 3</option>
              </select>
            </div>
          </div>
        </div>


        <b>Extra Fields</b><br>
        <div class="selectorField draggableField">
          <div class="displaydate well well-mini"><b></b> Date</div>
          <div class="model">
            <label class="control-label">Date</label>
            <span class="ctrl-date">MM/DD/YYYY</span>
            <input type="text" placeholder="Select Date..." class="ctrl-date form-control date-picker">
          </div>
        </div>

        <div class="selectorField draggableField">
          <div class="displaytext well well-mini"><b></b> TextArea</div>
          <div class="model">
            <label class="control-label">TextArea</label>
            <textarea class="ctrl-textarea form-control" rows="3"></textarea>
          </div>
        </div>

        <b>Conditional Fields</b><br>
        <div class="selectorField draggableField">
          <div class="displayaddress well well-mini"><b></b> Address</div>
          <div class="model">
            <label class="control-label">Shipping & Billing Address</label>
            <textarea placeholder = "Enter shipping address here..." class="ctrl-address shipping form-control" rows="3"></textarea>
            <span style="display:block;"><input class="ctrl-address checkAddress" type="checkbox" name="addressField" >Same?</span>
            <textarea placeholder = "Enter billing address here..." class="ctrl-address billing form-control" rows="3"></textarea>
          </div>
        </div>

        <b>Buttons</b><br>
        <div class="selectorField draggableField">
          <button class="btn ctrl-btn btn-default" onclick="return false;" >Simple Button</button>
        </div>
        <div class="selectorField draggableField">
          <button class="btn btn-primary ctrl-btn" onclick="return false;">Primary Button</button>
        </div>
        <div class="selectorField draggableField">
          <button class="btn btn-success ctrl-btn" type="submit"><i class="icon-ok-sign icon-white"></i> Submit Button</button>
        </div>
        <div class="selectorField draggableField">
          <button class="btn btn-danger ctrl-btn" type="reset"><i class="icon-trash icon-white"></i> Reset Button</button>
        </div>
        <!-- End of list of controls -->
      </div>
    </div>
  .</div>
  


